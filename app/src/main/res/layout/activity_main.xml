<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.benwong.udacitymusicalstructure.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Song 1"
        android:id="@+id/song1Label"
        android:layout_alignTop="@+id/picassoLibraryLabel1" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Song 2"
        android:id="@+id/song2Label"
        android:layout_below="@+id/song1Label" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Song 3"
        android:id="@+id/song3Label"
        android:layout_below="@+id/song2Label" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Music Library View"
        android:id="@+id/musicLibraryTitleLabel"
        android:layout_below="@+id/appTitle" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Song&apos;s Album Cover Goes Here with Picasso"
        android:id="@+id/picassoLibraryLabel1"
        android:layout_below="@+id/musicLibraryTitleLabel"
        android:layout_alignLeft="@+id/musicLibraryTitleLabel"
        android:layout_alignStart="@+id/musicLibraryTitleLabel" android:layout_marginTop="27dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="Song&apos;s Album Cover Goes Here with Picasso"
              android:id="@+id/picassoLibraryLabel2"
              android:layout_alignTop="@+id/song2Label"
              android:layout_alignLeft="@+id/musicLibraryTitleLabel"
              android:layout_alignStart="@+id/musicLibraryTitleLabel"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="Song&apos;s Album Cover Goes Here with Picasso"
              android:id="@+id/picassoLibraryLabel3"
              android:layout_alignTop="@+id/song3Label" android:layout_alignLeft="@+id/picassoLibraryLabel2"
              android:layout_alignStart="@+id/picassoLibraryLabel2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Detail View"
        android:id="@+id/toDetailView" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="83dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UdacityMusicalStructure"
        android:id="@+id/appTitle"
        android:layout_alignParentTop="true" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
