<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LyricsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lyrics for the Song"
        android:id="@+id/lyricsLabel" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="44dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Details View"
        android:id="@+id/toDetailsViewBtn"
        android:layout_marginTop="96dp" android:layout_below="@+id/lyricsLabel"
        android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="UdacityMusicalStructure" android:id="@+id/appTitle3"
              android:layout_alignParentTop="true" android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"/>
</RelativeLayout>
